<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Users</title>
    <link href="/tailwind.css" rel="stylesheet"> <!-- Link to Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100 p-6">
    <div class="text-center mb-8">
        <h1 class="text-5xl font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-blue-500 to-purple-600 p-4 rounded-lg shadow-md inline-block">
            ALL USERS
        </h1>
    </div>
    <!-- Back Button -->
    <div class="mb-6">
        
        <form action="/">
            <button
                class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
                Back
            </button>
        </form>
    </div>

    <!-- Users Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        <% for (const user of users) { %>
            <div class="bg-white shadow-md rounded-lg p-6 flex flex-col">
                <h3 class="text-xl font-semibold mb-2">ID: <%= user.id %></h3>
                <p class="text-gray-700 mb-4">Email: <%= user.email %></p>
                <p class="text-gray-700 mb-4">Username: <%= user.username %></p>
                <!-- <p class="text-gray-700 mb-6">Password: <%= user.password %></p> -->

                <!-- Edit and Delete Buttons -->
                <div class="flex gap-4">
                    <form method="GET" action="/users/<%= user.id %>/edit">
                        <button
                            class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
                            Edit Username
                        </button>
                    </form>
                    <form method="GET" action="/users/<%= user.id %>/delete">
                        <button
                            class="bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
                            Delete Username
                        </button>
                    </form>
                </div>
            </div>
        <% } %>
    </div>

</body>

</html>
